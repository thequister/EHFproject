	year = {2014},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/roiw.12053},
	keywords = {measurement, risk, EHF, D31, household income, household risk, I14, J11, medical spending, volatility, wealth},
	pages = {S5--S32},
